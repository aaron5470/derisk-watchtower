{
  "dashboard": {
    "title": "DeRisk Watchtower",
    "tags": ["defi", "risk", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Risk Event Triggers",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(risk_event_trigger_total[5m])",
            "legendFormat": "Triggers/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "title": "Protection Success vs Failure",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "rate(protect_success_total[5m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "rate(protect_failure_total[5m])",
            "legendFormat": "Failure",
            "refId": "B"
          }
        ]
      },
      {
        "id": 3,
        "title": "Alert Latency (P95)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_latency_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Positions Monitored",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "positions_monitored",
            "legendFormat": "Active Positions",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "auto"
        }
      },
      {
        "id": 5,
        "title": "API Request Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
